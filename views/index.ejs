<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Memories of Sallu and Bandhu">
  <meta property="og:description" content="Memories of Sallu and Bandhu">
  <meta property="og:image" content="https://t3.ftcdn.net/jpg/03/08/39/72/360_F_308397226_ZZeDguxP7owqPAddTvmgi3s3Y7q7Wgrw.jpg">
  <meta name="keywords" content="Sandhu Journey, Sallu and Bandhu, memories, photos, love, journey, anniversary">
  <meta property="og:title" content="TheSandhuJourney‚ù§Ô∏èü´∂üèº">
  <meta name="description" content="Sallu and Bandhu's journey together">
  <title>TheSandhuJourney‚ù§Ô∏èü´∂üèº</title>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div class="preloader">
    <div class="preloader-content">
      <h1>Welcome to The Sandhu Journey</h1>
      <div class="loader"></div>
    </div>
  </div>

  <header class="header">
    <h1>Our Journeyüíóüòçü´∂üèº</h1>
    <div class="anniversary-counter">
      <p>Together since <span id="months-together">0</span> months, <span id="days-together">0</span> days</p>
    </div>
  </header>
  <!-- Search Section -->
<div id="searchSection" style="margin-top:20px; text-align:center;">
    <button id="searchToggle" style="background:none; border:none; cursor:pointer; font-size:20px;">üîç</button>
    <div id="searchForm" style="display:none; margin-top:10px;">
        <select id="searchYear">
            <option value="">Year</option>
            <% years.forEach(function(y) { %>
                <option value="<%= y %>"><%= y %></option>
            <% }); %>
        </select>
        <select id="searchMonth">
            <option value="">Month</option>
            <% months.forEach(function(m) { %>
                <option value="<%= m %>"><%= m %></option>
            <% }); %>
        </select>
        <button onclick="searchAlbum()">Go</button>
    </div>
</div>

  <main class="timeline-container">
    <% if (memories.length === 0) { %>
      <div class="empty-timeline">
        <h2>No memories yet</h2>
        <p>Start by adding your first memory!</p>
        <a href="/upload" class="btn-primary">Add Your First Memory</a>
      </div>
    <% } else { %>
      <div class="albums-grid">
        <% 
          // Group memories by month and year
          const groupedMemories = {};
          memories.forEach(memory => {
            const key = `${memory.month}-${memory.year}`;
            if (!groupedMemories[key]) {
              groupedMemories[key] = [];
            }
            groupedMemories[key].push(memory);
          });
        %>
        
        <% Object.entries(groupedMemories).forEach(([key, monthMemories]) => { %>
          <div class="album-card" data-month="<%= key %>">
            <div class="album-thumbnail">
              <% if (monthMemories[0].photos && monthMemories[0].photos.length > 0) { %>
                <img src="<%= monthMemories[0].photos[0].url %>" alt="Album cover">
              <% } else { %>
                <div class="no-photo-placeholder">
                  <i class="fas fa-image"></i>
                </div>
              <% } %>
              <div class="album-overlay">
                <h3><%= monthMemories[0].month %> <%= monthMemories[0].year %></h3>
                <p><%= monthMemories.length %> memories</p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="timeline-view" style="display: none;">
        <button class="back-to-albums btn-secondary">
          <i class="fas fa-arrow-left"></i> Back to Albums
        </button>
        <div class="timeline">
          <% memories.forEach((memory, index) => { %>
            <div class="timeline-item" data-month="<%= memory.month %>-<%= memory.year %>">
              <div class="timeline-content <%= index % 2 === 0 ? 'left' : 'right' %>">
                <h2><%= memory.month %> <%= memory.year %></h2>
                <h3><%= memory.title %></h3>
                
                <div class="photo-gallery">
                  <% memory.photos.slice(0, 4).forEach(photo => { %>
                    <div class="photo-item">
                      <img src="<%= photo.url %>" alt="Memory photo">
                      <% if (photo.caption) { %>
                        <p class="photo-caption"><%= photo.caption %></p>
                      <% } %>
                    </div>
                  <% }); %>
                </div>
                
                <% if (memory.photos.length > 4) { %>
                  <div class="view-more">
                    <a href="/memory/<%= memory._id %>" class="btn-secondary">
                      View all <%= memory.photos.length %> photos
                    </a>
                  </div>
                <% } %>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
  </main>

  <div id="congrats-modal" class="congrats-modal">
    <div class="congrats-content">
      <h2>Congratulations!</h2>
      <p>You've been together for <span id="congrats-months">0</span> months and <span id="congrats-days">0</span> days!</p>
      <div class="heart-animation">‚ù§Ô∏è</div>
      <br>
      <button id="close-congrats" class="btn-primary">Continue to Our Journey</button>
    </div>
  </div>

  <a href="/upload" class="upload-btn" title="Add New Memories">
    <i class="fas fa-plus"></i>
  </a>
  
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>
  <script>
document.getElementById("searchToggle").addEventListener("click", function() {
    let form = document.getElementById("searchForm");
    form.style.display = (form.style.display === "none") ? "block" : "none";
});

function searchAlbum() {
    let y = document.getElementById("searchYear").value;
    let m = document.getElementById("searchMonth").value;
    if(y && m) {
        window.location.href = `/timeline/${y}/${m}`;
    }
}
</script>
  <script>
    // Preloader
    window.addEventListener("load", () => {
      // Force preloader to show for at least 3 seconds
      const preloader = document.querySelector(".preloader");
      const startTime = Date.now();
      const minDisplayTime = 3000; // 3 seconds

      function hidePreloader() {
        const elapsedTime = Date.now() - startTime;
        const remainingTime = Math.max(0, minDisplayTime - elapsedTime);

        setTimeout(() => {
          gsap.to(preloader, {
            opacity: 0,
            duration: 0.5,
            onComplete: () => {
              preloader.style.display = "none";
              showCongratsIfNeeded();
            },
          });
        }, remainingTime);
      }

      hidePreloader();
    });

    // Initialize GSAP animations
    document.addEventListener("DOMContentLoaded", () => {
      gsap.registerPlugin(ScrollTrigger);

      // Timeline item animations
      gsap.utils.toArray(".timeline-item").forEach((item) => {
        gsap.from(item.querySelector('.timeline-content'), {
          scrollTrigger: {
            trigger: item,
            start: "top 80%",
            toggleActions: "play none none none",
          },
          opacity: 0,
          x: item.querySelector('.timeline-content').classList.contains('left') ? -50 : 50,
          duration: 0.8,
          ease: "power2.out",
        });
      });

      // Photo hover animations
      gsap.utils.toArray(".photo-item").forEach((photo) => {
        photo.addEventListener("mouseenter", () => {
          gsap.to(photo.querySelector("img"), {
            scale: 1.05,
            duration: 0.3,
          });
        });

        photo.addEventListener("mouseleave", () => {
          gsap.to(photo.querySelector("img"), {
            scale: 1,
            duration: 0.3,
          });
        });
      });

      // Calculate relationship duration
      const startDate = new Date("March 4, 2025");
      const today = new Date();

      const diffTime = Math.abs(today - startDate);
      const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
      
      let months = 0;
      let days = 0;
      
      // Account for different month lengths
      let tempDate = new Date(startDate);
      while (true) {
        tempDate.setMonth(tempDate.getMonth() + 1);
        if (tempDate > today) {
          // Calculate remaining days
          tempDate.setMonth(tempDate.getMonth() - 1);
          days = Math.floor((today - tempDate) / (1000 * 60 * 60 * 24));
          break;
        }
        months++;
      }

      document.getElementById("months-together").textContent = months;
      document.getElementById("days-together").textContent = days;
      
      document.getElementById("congrats-months").textContent = months;
      document.getElementById("congrats-days").textContent = days;

      // Album click handling
      const albumCards = document.querySelectorAll('.album-card');
      const albumsGrid = document.querySelector('.albums-grid');
      const timelineView = document.querySelector('.timeline-view');
      const timelineItems = document.querySelectorAll('.timeline-item');
      const backButton = document.querySelector('.back-to-albums');

      albumCards.forEach(card => {
        card.addEventListener('click', () => {
          const month = card.dataset.month;
          
          // Hide albums grid and show timeline
          albumsGrid.style.display = 'none';
          timelineView.style.display = 'block';

          // Show only memories from the selected month
          timelineItems.forEach(item => {
            if (item.dataset.month === month) {
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });

          // Scroll to top
          window.scrollTo({ top: 0, behavior: 'smooth' });
        });
      });

      backButton.addEventListener('click', () => {
        // Show all timeline items
        timelineItems.forEach(item => item.style.display = 'block');
        
        // Hide timeline and show albums
        timelineView.style.display = 'none';
        albumsGrid.style.display = 'grid';
        
        // Scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    });
    
    // Anniversary congratulations modal
    function showCongratsIfNeeded() {
      const startDate = new Date("March 4, 2025");
      const today = new Date();
      
      const diffTime = Math.abs(today - startDate);
      const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
      
      // Show congrats on milestone days (monthly anniversary or 100 days or yearly)
      const isMonthlyAnniversary = today.getDate() === 4; // 4th of any month
      const isSpecialDay = diffDays === 100 || diffDays === 365;
      
      if (isMonthlyAnniversary || isSpecialDay) {
        const modal = document.getElementById("congrats-modal");
        modal.style.display = "flex";
        
        // Animate heart
        gsap.to(".heart-animation", {
          scale: 1.5,
          duration: 0.8,
          repeat: -1,
          yoyo: true
        });
        
        // Close button
        document.getElementById("close-congrats").addEventListener("click", () => {
          gsap.to(modal, {
            opacity: 0,
            duration: 0.5,
            onComplete: () => {
              modal.style.display = "none";
              modal.style.opacity = 1;
            }
          });
        });
      }
    }
  </script>

  <style>
    .albums-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 2rem;
      padding: 2rem;
    }

    .album-card {
      cursor: pointer;
      transition: transform 0.3s ease;
    }

    .album-card:hover {
      transform: scale(1.05);
    }

    .album-thumbnail {
      position: relative;
      aspect-ratio: 1;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .album-thumbnail img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .no-photo-placeholder {
      width: 100%;
      height: 100%;
      background: #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      color: #ccc;
    }

    .album-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
      color: white;
      padding: 1rem;
      text-align: center;
    }

    .album-overlay h3 {
      margin: 0;
      font-size: 1.2rem;
    }

    .album-overlay p {
      margin: 0.5rem 0 0;
      font-size: 0.9rem;
      opacity: 0.9;
    }

    .back-to-albums {
      margin: 1rem 2rem;
      padding: 0.5rem 1rem;
      border: none;
      background: #f0f0f0;
      border-radius: 5px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .back-to-albums:hover {
      background: #e0e0e0;
    }
  </style>
</body>
</html>
